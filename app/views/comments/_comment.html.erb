<!--Partial for displaying a comment -->

<p>
  <b>Comment:</b>  <br />
  <p> Posted <%= time_ago_in_words(comment.created_at) %> ago </p>
  <%= comment.content %>
</p>

<p>
  <%= link_to 'Delete Comment', [comment.recipe, comment],
              :confirm => 'Are you sure?',
              :method => :delete %>
</p>